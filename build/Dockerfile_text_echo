FROM "golang" AS builder

COPY ./go.mod /src/go.mod
COPY ./go.sum /src/go.sum

WORKDIR /src

RUN apt update
RUN apt install git
RUN go mod download

COPY ./ /src/
RUN  go build -o ./cmd/text_echo/main ./cmd/text_echo/main.go

# ---------------------------

FROM "ubuntu"

COPY    --from=builder /src/cmd/main /app/main
WORKDIR /app

CMD ["/app/main"]